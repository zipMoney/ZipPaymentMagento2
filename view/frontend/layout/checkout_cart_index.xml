<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Zip_ZipPayment::css/zipmoney.css"/>
    </head>
    <body>

        <referenceBlock name="head.components">
            <block class="Zip\ZipPayment\Block\Advert\RootEl" name="zipmoney.rootel"/>
        </referenceBlock>

        <referenceContainer name="page.top">
            <block class="Zip\ZipPayment\Block\Advert\Banner" name="zipmoney.productbanner"
                   template="advert/banner.phtml">
                <arguments>
                    <argument name="page_type" xsi:type="string">cart</argument>
                </arguments>
            </block>
        </referenceContainer>


        <referenceContainer name="checkout.cart.totals.container">
            <block class="Zip\ZipPayment\Block\Advert\Tagline"
                   name="product.info.addtocart.additional.zipmoney.carttagline" template="advert/tagline.phtml">
                <arguments>
                    <argument name="page_type" xsi:type="string">cart</argument>
                </arguments>
            </block>
        </referenceContainer>


        <referenceContainer name="checkout.cart.methods">
            <block class="Zip\ZipPayment\Block\Advert\Widget"
                   name="product.info.addtocart.additional.zipmoney.productimage" template="advert/widget.phtml">
                <arguments>
                    <argument name="page_type" xsi:type="string">cart</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
